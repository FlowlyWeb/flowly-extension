{
  "manifest_version": 3,
  "name": "Flowly",
  "author": "Th√©o Vilain / Teyk0o",
  "version": "1.6.0",
  "description": "Where every word matters",
  "host_permissions": [
    "*://*.oclock.school/*",
    "https://api.theovilain.com/*",
    "*://*.lutice.online/*",
    "https://tenor.googleapis.com/*"
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "48": "flowly-48.png",
    "96": "flowly-96.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "flowly-48.png",
      "96": "flowly-96.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.oclock.school/*",
        "*://*.lutice.online/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}