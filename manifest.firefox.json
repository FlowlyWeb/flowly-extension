{
  "manifest_version": 2,
  "name": "Flowly",
  "author": "Th√©o Vilain / Teyk0o",
  "version": "1.3.0",
  "license": "All Rights Reserved",
  "description": "Where every word matters",
  "browser_specific_settings": {
    "gecko": {
      "id": "flowlyweb@theovilain.com",
      "strict_min_version": "112.0"
    }
  },
  "permissions": [
    "storage",
    "*://*.oclock.school/*",
    "https://api.theovilain.com/*",
    "*://*.lutice.online/*"
  ],
  "icons": {
    "48": "flowly-48.png",
    "96": "flowly-96.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "flowly-48.png",
      "96": "flowly-96.png"
    }
  },
  "web_accessible_resources": [
    "settings.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.oclock.school/*",
        "*://*.lutice.online/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}