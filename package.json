{
  "name": "flowly",
  "version": "1.5.0",
  "type": "module",
  "description": "Retrieve functionality from Slippers for BBB.",
  "repository": "https://github.com/FlowlyWeb/flowly-extension",
  "bugs": {
    "url": "https://github.com/FlowlyWeb/flowly-extension/issues"
  },
  "homepage": "https://flowly.theovilain.com/",
  "keywords": [
    "oclock",
    "school",
    "bbb",
    "slippers"
  ],
  "scripts": {
    "clean": "rimraf dist dist-scripts",
    "watch": "webpack --watch --mode=development",
    "build": "webpack --mode=development",
    "build:scripts": "webpack --config webpack.config.js --mode=production --env target=node-scripts",
    "build:prod": "webpack --mode=production",
    "build:firefox": "webpack --mode=production --env target=firefox",
    "build:chrome": "webpack --mode=production --env target=chrome",
    "release:chrome": "node --experimental-vm-modules dist-scripts/release.js patch --browser=chrome",
    "release:major:chrome:no-git": "node --experimental-vm-modules dist-scripts/release.js major --no-git --browser=chrome",
    "release:firefox": "node --experimental-vm-modules dist-scripts/release.js patch --browser=firefox",
    "release:both": "node --experimental-vm-modules dist-scripts/release.js patch --browser=both",
    "release:both:no-git": "node --experimental-vm-modules dist-scripts/release.js patch --no-git --browser=both",
    "release:both:minor:no-git": "node --experimental-vm-modules dist-scripts/release.js minor --no-git --browser=both",
    "release:chrome:minor:no-git": "node --experimental-vm-modules dist-scripts/release.js minor --no-git --browser=chrome",
    "dev": "webpack --watch --mode=development",
    "start": "web-ext run --source-dir ./dist/",
    "release": "node --experimental-vm-modules dist-scripts/release.js",
    "release:no-git": "node --experimental-vm-modules dist-scripts/release.js patch --no-git",
    "release:patch": "node --experimental-vm-modules dist-scripts/release.js patch",
    "release:patch:no-git": "node --experimental-vm-modules dist-scripts/release.js patch --no-git",
    "release:patch:skip-build": "node --experimental-vm-modules dist-scripts/release.js patch --no-git --skip-build",
    "release:minor": "node --experimental-vm-modules dist-scripts/release.js minor",
    "release:minor:no-git": "node --experimental-vm-modules dist-scripts/release.js minor --no-git",
    "release:major": "node --experimental-vm-modules dist-scripts/release.js major",
    "release:major:no-git": "node --experimental-vm-modules dist-scripts/release.js major --no-git",
    "upload-only": "node --experimental-vm-modules dist-scripts/release.js patch --no-git --skip-build --upload-only"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/adm-zip": "^0.5.6",
    "@types/chrome": "^0.0.287",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^22.10.1",
    "@types/node-fetch": "^2.6.9",
    "@types/webextension-polyfill": "^0.12.1",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.4.1",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "form-data": "^4.0.0",
    "globals": "^15.12.0",
    "html-webpack-plugin": "^5.6.3",
    "https-browserify": "^1.0.0",
    "node-fetch": "^3.3.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "util": "^0.12.5",
    "web-ext": "^8.3.0",
    "webextension-polyfill-ts": "^0.26.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^6.0.1",
    "zx": "^8.2.4"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "adm-zip": "^0.5.16",
    "emoji-picker-element": "^1.26.0",
    "webextension-polyfill": "^0.12.0"
  }
}